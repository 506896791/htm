{
  "name": "htm",
  "version": "1.0.0",
  "description": "The Tagged Template syntax for Virtual DOM. Only browser-compatible syntax.",
  "main": "dist/htm.js",
  "umd:main": "dist/htm.js",
  "module": "dist/htm.mjs",
  "scripts": {
    "build": "microbundle src/htm.js -f es,umd --no-sourcemap --target web && npm run -s build:preact",
    "build:preact": "microbundle src/integrations/preact.js -o preact/index.js -f es,umd --no-sourcemap --target web",
    "test": "eslint src test && jest test"
  },
  "eslintConfig": {
    "extends": "developit",
    "rules": {
      "prefer-const": 2
    }
  },
  "repository": "developit/htm",
  "keywords": [
    "Hyperscript Tagged Markup",
    "tagged template",
    "template literals",
    "html",
    "htm",
    "preact",
    "lit"
  ],
  "author": "Jason Miller <jason@developit.ca>",
  "license": "Apache-2.0",
  "homepage": "https://github.com/developit/htm",
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-developit": "^1.1.1",
    "jest": "^23.1.0",
    "microbundle": "^0.4.4",
    "preact": "^8.2.9"
  }
}
